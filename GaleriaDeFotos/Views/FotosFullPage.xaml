<Page
    x:Class="GaleriaDeFotos.Views.FotosFullPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid RowDefinitions="*,40">
            <Image Height="640" Width="360">
                <Image.Source>
                    <BitmapImage UriSource="{x:Bind ViewModel.Item.ImageUri}" />
                </Image.Source>
            </Image>
            <Button Grid.Row="1" Content="Detalhes" Command="{x:Bind ViewModel.DetailClickCommand}" Height="30"
                    HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Page>